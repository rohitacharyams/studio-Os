# ============================================
# STUDIO OS - PRODUCTION ENVIRONMENT CONFIG
# ============================================
# Copy this to .env and fill in real values
# NEVER commit .env to git!

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production

# ============================================
# DATABASE (Azure PostgreSQL)
# ============================================
# Format: postgresql://username:password@hostname:5432/database_name?sslmode=require
DATABASE_URL=postgresql://studioos_admin:YOUR_PASSWORD@studioos-db.postgres.database.azure.com:5432/studioos_prod?sslmode=require

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600

# ============================================
# REDIS (Azure Cache for Redis - optional but recommended)
# ============================================
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@studioos-cache.redis.cache.windows.net:6380?ssl=True

# ============================================
# RAZORPAY (Payment Gateway)
# ============================================
# Get from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
RAZORPAY_KEY_SECRET=your_live_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# ============================================
# TWILIO (WhatsApp Business)
# ============================================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# OPENAI (AI Features)
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# SENDGRID (Email)
# ============================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# ============================================
# CORS - Allowed Origins
# ============================================
# Your frontend domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# AZURE BLOB STORAGE (for file uploads)
# ============================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=studioos;AccountKey=xxx;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=uploads

# ============================================
# APPLICATION URLS
# ============================================
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com
